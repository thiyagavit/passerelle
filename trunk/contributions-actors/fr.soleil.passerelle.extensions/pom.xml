	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.6.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<!-- Surchage de la javadoc -->
				<configuration>
					<attach>true</attach>
					<encoding>UTF-8</encoding>
					<debug>true</debug>
					<show>public</show>
					<doclet>doc.doclets.PtDoclet</doclet>
					<!-- DÃ©pendances de PtDoclet -->
					<docletArtifacts>
						<docletArtifact>
							<groupId>com.isencia.passerelle</groupId>
							<artifactId>docgenerator</artifactId>
							<version>RELEASE</version>
						</docletArtifact>
						<docletArtifact>
							<groupId>com.isencia.passerelle</groupId>
							<artifactId>engine</artifactId>
							<version>RELEASE </version>
						</docletArtifact>
						<docletArtifact>
							<groupId>ptolemy</groupId>
							<artifactId>core</artifactId>
							<version>RELEASE</version>
						</docletArtifact>
						<docletArtifact>
							<groupId>commons-logging</groupId>
							<artifactId>commons-logging</artifactId>
							<version>RELEASE</version>
						</docletArtifact>
					</docletArtifacts>
					<useStandardDocletOptions>false</useStandardDocletOptions>
					<additionalparam>-d doc/codeDoc</additionalparam>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12</version>
				<configuration>
					<parallel>classes</parallel>
					<threadCount>2</threadCount>
				</configuration>
			</plugin>


		</plugins>
	</build>

